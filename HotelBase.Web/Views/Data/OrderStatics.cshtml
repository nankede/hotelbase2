@{
    ViewBag.PageTitle = "订单列表";
}
<div class="lay-form" ng-app="myApp" ng-controller="myCtrl" ng-cloak>
    <div class="lay-form-item">
        <div class="lay-form-item-caption ">
            <label>查询维度</label>
        </div>
        <div class="lay-form-item-control">
            <input class="lay-input" ng-model="Search.PeopleMobile" placeholder="请输入供应商订单号" />
        </div>
    </div>
    <div class="lay-form-item">
        <div class="lay-form-item-control">
            <input class="lay-input long-input" id="txtcheckbeginDate" ng-model="Search.StartTime" />——
            <input class="lay-input long-input" id="txtcheckendDate" ng-model="Search.EndTime" />
        </div>
        <div class="lay-form-item-control">
            <input class="lay-input long-input" id="txtcbeginDate" ng-model="Search.StartTime" />——
            <input class="lay-input long-input" id="txtcendDate" ng-model="Search.EndTime" />
        </div>
    </div>
    <div class="lay-form-item">
        <div class="lay-form-item-control">
            <select class="lay-select select-area" placeholder="请选择省份" ng-model="Search.ProvId" ng-init="Search.ProvId=0" ng-options="item.Id as item. Name for item in ProvList" ng-change="getArea(1)"></select>
            <select class="lay-select select-area" placeholder="请选择城市" ng-model="Search.CityId" ng-init="Search.CityId=0" ng-options="item.Id as item. Name for item in CityList"></select>
        </div>
    </div>
    <div class="lay-form-item">
        <div class="lay-form-item-caption ">
            <label>政策来源</label>
        </div>
        <div class="lay-form-item-control">
            <select class="lay-select  lay-input" ng-model="Search.SourceId" ng-init="Search.SourceId=0" ng-options="item.Code as item. Name for item in Source"></select>
        </div>
    </div>
    <div class="lay-form-item">
        <div class="lay-form-item-caption ">
            <label>酒店id</label>
        </div>
        <div class="lay-form-item-control">
            <input class="lay-input" ng-model="Search.PeopleMobile" placeholder="多个以英文,隔开" />
        </div>
        <div class="lay-form-item-caption ">
            <label>酒店名称</label>
        </div>
        <div class="lay-form-item-control">
            <input class="lay-input" ng-model="Search.PeopleMobile" placeholder="多个以英文,隔开" />
        </div>
    </div>
    <div class="lay-form-item">
        <div class="lay-form-item-caption ">
            <label>供应商名称</label>
        </div>
        <div class="lay-form-item-control">
            <input class="lay-input" ng-model="Search.PeopleMobile" placeholder="多个以英文,隔开" />
        </div>
    </div>
    <input id="btnSearch" type="button" class="lay-btn lay-btn-primary" value="查询" ng-click="search(1)">
    <table class="lay-table">
        <thead>
            <tr>
                <th width="15%">订单号</th>
                <th width="5%">渠道</th>
                <th width="10%">酒店名称</th>
                <th width="10%">入住时间</th>
                <th width="15%">离店时间</th>
                <th width="15%">预订人</th>
                <th width="15%">订单状态</th>
                <th width="15%">总金额</th>
                <th width="10%">结算价</th>
                <th width="10%">操作</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="d in list">
                <td ng-bind="d.HOCustomerSerialId" style="word-wrap:break-word;word-break:break-all;"></td>
                <td ng-bind="d.HOSupplierSourceName"></td>
                <td ng-bind="d.HName"></td>
                <td ng-bind="d.HOCheckInDate"></td>
                <td ng-bind="d.HOCheckOutDate"></td>
                <td ng-bind="d.HOLinkerName"></td>
                <td ng-bind="d.HOStatus"></td>
                <td ng-bind="d.HOSellPrice"></td>
                <td ng-bind="d.HOContractPrice"></td>
                <td>
                    <input type="button" class="lay-btn lay-btn-edit" value="详情" ng-click="detail(d.Id,d.HOCustomerSerialId)" />
                </td>
            </tr>

            <tr ng-hide="list!=null &&list.length > 0">
                <td colspan="8" class="lay-table-empty">暂无数据显示</td>
            </tr>
        </tbody>
    </table>
    <div id="pager"></div>
</div>

<div class="lay-dialog" id="dialogDetail">
    <div class="lay-dialog-mask"></div>
    <div class="lay-dialog-cont" style="width:1060px;height:730px;">
        <div class="lay-dialog-hd">
            <h3>订单信息</h3>
            <button class="lay-dialog-btn-close"></button>
        </div>
        <div class="lay-dialog-bd">
            <iframe id="ifm_detail" src="" style="border:none;width:100%;height:100%;"></iframe>
        </div>
    </div>
</div>

@section foot{
    <script>
        var app = angular.module('myApp', []);
        app.controller('myCtrl', function ($scope) {
            $(function () {
                $scope.pageInit();
            });
            $scope.config = {
                listUrl: "/order/getorderlist/",
                sourceUrl: "/system/getdiclistbypcode/?pCode=101",
                areaUrl: "/system/GetAreaList/?pid=",
                TypeSource: [{ Type: 1, Name: "按时间维度" }, { Type: 2, Name: "入住人" }, { Type: 1, Name: "按时间维度" }, { Type: 1, Name: "按时间维度" }, { Type: 1, Name: "按时间维度" }],
                TimeType: [{ Type: 1, Name: "创建时间" }, { Type: 2, Name: "离店时间" }],
                //bedUrl: "/system/getdiclistbypcode/?pCode=501"
                sourceUrl: "/system/getdiclistbypcode/?pCode=101"
            }
            //页面初始化
            $scope.pageInit = function () {
                $scope.getSource();
                $scope.Search = { PageIndex: 1 };
                $scope.search(1);
            }

            //获取来源
            $scope.getSource = function () {
                $.ajax({
                    url: $scope.config.sourceUrl,
                    type: 'get',
                    dataType: "json",
                    timeout: 20000,
                    success: function (data) {
                        $scope.Source = data;
                        $scope.$apply();
                    },
                    error: function () {
                        console.log("err-getSource");
                    },
                    complete: function () {
                    }
                });
            }

            //获取省市查询
            $scope.getArea = function (type) {
                var pId = type == 0 ? 1 : $scope.Search.ProvId;
                if (!pId || pId <= 0) return;
                var url = $scope.config.areaUrl + pId;
                $.ajax({
                    url: url,
                    type: 'get',
                    dataType: "json",
                    timeout: 20000,
                    success: function (data) {
                        if (type == 0) {
                            $scope.ProvList = data;
                            $scope.ProvList.unshift({ Id: 0, Name: "请选择省份" });
                            $scope.CityList = [{ Id: 0, Name: "请选择城市" }];
                            $scope.Search.CityId = 0;
                        }
                        else {
                            $scope.CityList = data;
                            $scope.CityList.unshift({ Id: 0, Name: "请选择城市" });
                        }
                        $scope.$apply();
                    },
                    error: function () {
                        console.log("err-getSource");
                    },
                    complete: function () {
                    }
                });
            }
            //查询
            $scope.search = function (index) {
                $scope.detailClear();
                $scope.Search.PageIndex = index;
                var para = $scope.Search;
                eLoading.show();
                $.ajax({
                    url: $scope.config.listUrl,
                    type: 'post',
                    dataType: "json",
                    data: para,
                    timeout: 20000,
                    success: function (data) {
                        $scope.list = [];
                        if (data != null && data.IsSuccess > 0) {
                            $scope.list = data.List;
                            $scope.pagerInit(index, data.Total);
                        }
                        $scope.$apply();
                    },
                    error: function () {
                        console.log("err");
                        eMsg({
                            timer: 2000,
                            text: '查询失败，请稍后重试！'
                        });
                    },
                    complete: function () {
                        eLoading.hide();
                    }
                });
            }

            //获取来源
            $scope.getSource = function () {
                $.ajax({
                    url: $scope.config.sourceUrl,
                    type: 'get',
                    dataType: "json",
                    timeout: 20000,
                    success: function (data) {
                        $scope.Source = data;
                        $scope.$apply();
                    },
                    error: function () {
                        console.log("err-getSource");
                    },
                    complete: function () {
                    }
                });
            }
            //分页
            $scope.pagerInit = function (index, total) {
                var pager = new PagerView('pager');
                pager.index = index;
                pager.size = 10;
                pager.itemCount = total;
                pager.onclick = function (index) {
                    $scope.search(index);
                };
                pager.render();
            }
            $scope.detail = function (orderid,serialid) {
                var url = "/order/orderdetail?orderid=" + orderid + "&serialid=" + serialid;
                $('#ifm_detail').prop('src', url);
                $("#dialogDetail").eDialog('show');
            }

            $scope.detailClear = function (id) {
                $('#ifm_detail').prop('src', '');
                $("#dialogDetail").eDialog('hide');
            }
        });
    </script>
}